@model MVC_MiniProject_lastweek.ViewModel.CustomerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

<br />

@using (Html.BeginForm("Create", "Customer"))
{
    @Html.ValidationSummary(true, "Please See Following Error")
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.customer.CustomerName)
        @Html.TextBoxFor(m => m.customer.CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.customer.CustomerName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.customer.DOB)
        @Html.TextBoxFor(m => m.customer.DOB, "{0:dd MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.customer.DOB)
    </div>



    <div class="form-group">
        @Html.LabelFor(m => m.customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Type"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.customer.MembershipTypeId)
    </div>

    <div class="form-check">
        <label>
            @Html.CheckBoxFor(m => m.customer.IsSubsribedToNewsLetter)Subscribed To NewsLetter?
        </label>
    </div>
    @Html.HiddenFor(m => m.customer.CustomerId)
   
    <button type="submit" class="btn btn-primary" id="btn">Submit</button>
}
@section scripts{
   @Scripts.Render("~/bundles/jqueryval")
}
