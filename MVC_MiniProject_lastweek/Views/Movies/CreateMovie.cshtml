@model MVC_MiniProject_lastweek.ViewModel.MoviesViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

    @using (Html.BeginForm("CreateMovie", "Movies"))
    {
        if (Model.Movie == null)
        {<h2> New Movie </h2>}
        if (Model.Movie != null)
        {<h2> Edit Movie</h2>}

        <div class="form-group">
            @Html.LabelFor(m => m.Movie.MovieName)
            @Html.TextBoxFor(m => m.Movie.MovieName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.MovieName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Movie.ReleaseDate)
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd-MMM-yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Movie.GenreId)
            @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), "Select Genre", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.GenreId)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Movie.NumberInStock)
            @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
        </div>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Movie.MovieId)
        <button type="submit" class="btn btn-primary" id="btn">Submit</button>
    }
</body>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
